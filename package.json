{
	"name": "tiny-file-size",
	"version": "0.3.5",
	"description": "CLI tool for calculating size of files on disk",
	"keywords": [
		"cli",
		"tool",
		"size",
		"compressed",
		"gzip",
		"brotli"
	],
	"repository": "https://github.com/pajecawav/tiny-file-size.git",
	"bugs": "https://github.com/pajecawav/tiny-file-size/issues",
	"homepage": "https://github.com/pajecawav/tiny-file-size#readme",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"bin": {
		"file-size": "dist/cli.js"
	},
	"files": [
		"dist/*.js",
		"dist/*.mjs",
		"dist/*.js.map",
		"dist/*.mjs.map",
		"dist/*.d.ts"
	],
	"license": "MIT",
	"sideEffects": false,
	"scripts": {
		"build": "tsup",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"lint": "run-p -l lint:*",
		"lint:eslint": "eslint .",
		"lint:tsc": "tsc --noEmit",
		"lint:format": "prettier . --check",
		"format": "prettier . --write",
		"prepare": "husky install",
		"prepublishOnly": "pnpm lint && pnpm test && pnpm build"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.6",
		"@commitlint/config-conventional": "^17.6.6",
		"@types/glob": "^8.1.0",
		"@types/node": "^18.16.19",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitest/coverage-c8": "^0.33.0",
		"@vitest/ui": "^0.33.0",
		"eslint": "^8.44.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"tsup": "^7.1.0",
		"typescript": "^5.1.6",
		"vitest": "^0.33.0"
	},
	"dependencies": {
		"glob": "^10.3.3",
		"picocolors": "^1.0.0"
	}
}
